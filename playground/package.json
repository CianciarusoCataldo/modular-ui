{
  "name": "modular-ui-playground",
  "version": "1.3.0",
  "private": true,
  "homepage": "https://cianciarusocataldo.github.io/modular-ui",
  "scripts": {
    "preanalyze": "npm run build:dev",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "prebuild:dev": "NODE_ENV=production npm run build:styles",
    "build:dev": "NODE_ENV=development GENERATE_SOURCEMAP=true react-scripts build",
    "build:styles": "postcss --config config/postcss.config.js src/assets/styles/styles.css -o src/assets/styles/styles.output.css  --verbose",
    "watch:styles": "chokidar 'src/**/*.css' --ignore src/assets/styles/styles.output.css -c 'npm run build:styles'",
    "prebuild": "NODE_ENV=production npm run build:styles",
    "build": "NODE_ENV=production GENERATE_SOURCEMAP=false react-scripts build",
    "prestart": "NODE_ENV=development npm run build:styles",
    "start:app": "NODE_ENV=development react-scripts start",
    "start:styleguide": "styleguidist server --config config/styleguide.config.js",
    "start": "npm-run-all --parallel watch:styles start:app",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "check-types": "tsc"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "@cianciarusocataldo/demo-ui": "^3.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^1.6.0",
    "@types/classnames": "^2.3.1",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "autoprefixer": "^10.2.6",
    "chokidar-cli": "^2.1.0",
    "classnames": "^2.3.1",
    "cssnano": "^4.1.11",
    "gh-pages": "^3.2.3",
    "history": "^4.10.1",
    "i18next": "^20.3.2",
    "i18next-chained-backend": "^3.0.2",
    "i18next-http-backend": "^1.2.6",
    "i18next-localstorage-backend": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "react-docgen-typescript": "^2.0.0",
    "react-i18next": "^11.11.0",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.0",
    "react-toastify": "^7.0.4",
    "redux-first-history": "^4.5.0",
    "redux-observable": "^1.2.0",
    "source-map-explorer": "^2.5.2",
    "tailwindcss": "^2.2.2",
    "typescript": "^4.3.4"
  }
}
